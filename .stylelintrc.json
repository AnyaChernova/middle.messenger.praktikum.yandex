{
	"extends": "stylelint-config-airbnb",
	"rules": {
		"indentation": "tab",
		"at-rule-empty-line-before": ["always", {
			"except": ["after-same-name"],
			"ignore": ["inside-block"],
			"ignoreAtRules": ["else", "for", "each"]
		}],
		"rule-empty-line-before": ["always", {
			"except": ["first-nested"]
		}],
		"max-nesting-depth": 3
	}
}
